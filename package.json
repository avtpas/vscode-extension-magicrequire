{
	"name": "magic-require",
	"displayName": "magic require",
	"publisher": "chaibiqing",
	"description": "",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"main": "./extension.js",
	"activationEvents": [
		"onCommand:extension.magicRequire"
	],
	"contributes": {
		"configuration": {
      "type": "object",
      "title": "magic require configuration",
      "properties": {
				"magicrequire.alias": {
          "type": "object",
          "default": {},
          "description": "alias for searching and easy importing"
        },
        "magicrequire.include": {
          "type": "array",
          "default": [
            "js",
            "ts",
            "jsx",
            "tsx",
            "vue"
          ],
          "description": "include files to search for"
        },
        "magicrequire.exclude": {
          "type": "array",
          "default": [
            "node_modules",
            "typings",
            "dist",
            "bin",
            "build",
            "tmp",
            "test"
          ],
          "description": "defines files and folders to exclude"
        }
      }
    },
		"commands": [
			{
				"command": "extension.magicRequire",
				"title": "Magic Require"
			}
		]
	},
	"repository": {
    "type": "git",
    "url": "git+https://github.com/avtpas/vscode-extension-magicrequire"
  },
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"eslint": "^5.13.0",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
